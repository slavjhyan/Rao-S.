void LongestQue(std::string str)
{
        int max = 0;
        char test = str[0];
        int count = 1;
        char symbol;
        for(int i = 1; i < str.length(); i++)
        {
                if(str[i] == test)
                {
                        count++;
                }
                else
                {
                        if(max < count)
                        {
                                max = count;
                                symbol = str[i - 1];
                        }
                        count = 0;
                }
        }

        for(int i = 0; i < max; i++)
