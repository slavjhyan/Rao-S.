	int arr[10];
	int size = 10;

	for (int i = 0; i < size; i++)
	{
		std::cin >> arr[i];
	}

	int max = 0;
	for (int i = 0; i < size; i++)
	{
		if (arr[i] > arr[max])
			max = i;
